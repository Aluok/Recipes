{% trans_default_domain 'FOSUserBundle' %}

<h1>My profile</h1>

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit form-horizontal' } }) }}

  <div class="form-group">
    <div class="col-sm-12">
      {{ form_label(form.username, null, {'label_attr': {'class': 'col-sm-2'}}) }}
      <div class="col-sm-9">
        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
    <div class="col-sm-12">
      {{ form_errors(form.username) }}
  </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      {{ form_label(form.email, null, {'label_attr': {'class': 'col-sm-2'}}) }}
      <div class="col-sm-9">
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
    <div class="col-sm-12">
      {{ form_errors(form.email) }}
  </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      {{ form_label(form.current_password, null, {'label_attr': {'class': 'col-sm-2'}}) }}
      <div class="col-sm-9">
        {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
    <div class="col-sm-12">
      {{ form_errors(form.current_password) }}
    </div>
  </div>
    {{ form_widget(form) }}
    <div class="form-group">
        <a href="{{ path('fos_user_profile_show') }}" class="btn btn-md btn-danger col-md-2 col-md-offset-2">Cancel</a>
        <input type="submit" class="btn btn-md btn-success col-md-2 col-md-offset-4" value="{{ 'profile.edit.submit'|trans }}" />
    </div>
{{ form_end(form) }}
