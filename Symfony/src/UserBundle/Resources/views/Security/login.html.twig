{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
  {% if error %}
      <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}

  <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal container-fluid">
      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
      <div class="form-group">
        <label for="username" class="control-label col-sm-2">{{ 'security.login.username'|trans }}</label>
        <div class="col-sm-9">
          <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" required="required" />
        </div>
      </div>
      <div class="form-group">
        <label for="password" class="control-label col-sm-2">{{ 'security.login.password'|trans }}</label>
        <div class="col-sm-9">
          <input type="password" class="form-control" id="password" name="_password" required="required" />
        </div>
      </div>
      <div class="form-group">
        <div class="checkbox">
          <label for="remember_me">
          <input type="checkbox" id="remember_me"name="_remember_me" value="on" />
          {{ 'security.login.remember_me'|trans }}</label>
        </div>
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-primary btn-md col-sm-4 col-md-offset-4" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
      </div>
  </form>
  {% endblock %}
