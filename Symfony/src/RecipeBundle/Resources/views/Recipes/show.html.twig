{% extends "RecipeBundle::layout.html.twig" %}

{% block content %}
    <h1>Recipe</h1>

    <table>
        <tbody>
            <tr>
                <th>Ingredients</th>
                <td>{{ recipe.ingredients }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ recipe.category }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ recipe.slug }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{% if recipe.duration %}{{ recipe.duration|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ recipe.rating }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if recipe.date %}{{ recipe.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Version</th>
                <td>{{ recipe.version }}</td>
            </tr>
            <tr>
                <th>Reviews</th>
                <td>{{ recipe.reviews }}</td>
            </tr>
            <tr>
                <th>Isfinished</th>
                <td>{% if recipe.isFinished %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Ispublished</th>
                <td>{% if recipe.isPublished %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('recipe_list') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('recipe_edit', { 'id': recipe.slug }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
