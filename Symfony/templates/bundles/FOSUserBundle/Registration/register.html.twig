{% trans_default_domain 'FOSUserBundle' %}
  <div class="container-fluid">
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
      {{ form_errors(form) }}

      <div class="form-group">
        <div class="row">
          {{ form_label(form.username, null, {'label_attr': {'class': 'col-sm-2'}}) }}
          <div class="col-sm-9">
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>
        {{ form_errors(form.username) }}
      </div>
      <div class="form-group">
        <div class="row">
          {{ form_label(form.email, null, {'label_attr': {'class': 'col-sm-2'}}) }}
          <div class="col-sm-9">
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>
        {{ form_errors(form.email) }}
      </div>

      <div class="form-group">
        <div class="row">
          {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'col-sm-2'}}) }}
          <div class="col-sm-9">
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>
        {{ form_errors(form.plainPassword.first) }}
      </div>
      <div class="form-group">
        <div class="row">
          {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'col-sm-2'}}) }}
          <div class="col-sm-9">
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>
        {{ form_errors(form.plainPassword.second) }}
      </div>
      {{ form_widget(form) }}
      <div class="form-group">
        <input type="submit" class="btn btn-primary btn-md col-sm-4 col-md-offset-4" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
      </div>
    {{ form_end(form) }}
  </div>
