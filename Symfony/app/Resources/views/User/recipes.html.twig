{% extends "layout.html.twig" %}
{% trans_default_domain "app" %}

{% block content %}
    <h1>{{ 'title.user.recipes'|trans }}</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>{{ 'recipe.title.name'|trans }}</th>
                <th>{{ 'recipe.title.category'|trans }}</th>
                <th>{{ 'recipe.title.duration'|trans }}</th>
                <th>{{ 'recipe.title.rating'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td><a href="{{ path('recipe_edit', { 'id': recipe.slug }) }}">{{ recipe.title }}</a></td>
                <td><a href="{{ path('recipe_edit', { 'id': recipe.slug }) }}">{{ recipe.category }}</a></td>
                <td><a href="{{ path('recipe_edit', { 'id': recipe.slug }) }}">{% if recipe.duration %}{{ recipe.duration|date('H:i') }}{% endif %}</a></td>
                <td><a href="{{ path('recipe_edit', { 'id': recipe.slug }) }}">{{ recipe.rating }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
