{% extends "layout.html.twig" %}

{% block content %}
    <h1>Recipe list</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th><a id="title-recipe" href="#">Title</a></th>
                <th><a id="category-recipe" href="#">Category</a></th>
                <th><a id="duration-recipe" href="#">Duration</a></th>
                <th><a id="rating-recipe" href="#">Rating</a></th>
            </tr>
        </thead>
        <tbody id="body-list" 
        	data-uri="{{ uri }}" 
        	data-uri-show="{{ path('recipe_view', { 'id': 0 }) }}"
        	>
            <tr id="layer-recipe-item">
                <td class="recipe-title"><a href=""></a></td>
                <td class="recipe-category"></td>
                <td class="recipe-duration"></td>
                <td class="recipe-rating"></td>
            </tr>
        </tbody>
    </table>
	<nav class="text-center">
	  <ul class="pagination collapse">
	    <li class="disabled">
	      <a href="{{ path(this_route) }}" aria-label="First" data-action="first">
	        <span aria-hidden="true">&laquo;&laquo;</span>
	      </a>
	    </li>
	    <li class="disabled">
	      <a href="#" aria-label="Previous" data-action="previous">
	      	<span aria-hidden="true">&laquo;</span>
      	  </a>
      	</li>
	    <li class="active"><a href="#" class="current" data-page="1">1</a></li>
	    <li>
	      <a href="#" aria-label="Next" data-page="2" data-action="next">
	        <span aria-hidden="true">&raquo;</span>
	      </a>
	    </li>
	    <li>
	      <a href="#" aria-label="Last" data-page="{{ (nb_recipe / 10)|round(0, 'ceil') }}" data-action="last">
	        <span aria-hidden="true">&raquo;&raquo;</span>
	      </a>
	    </li>
	  </ul>
	</nav>
    <ul>
        <li>
            <a href="{{ path('recipe_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/Recipe/list.js') }}" />
{% endblock %}