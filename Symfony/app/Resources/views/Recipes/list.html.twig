{% extends "layout.html.twig" %}

{% block content %}
    <h1>Recipe list</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Duration</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td><a href="{{ path('recipe_view', { 'id': recipe.slug }) }}">{{ recipe.title }}</a></td>
                <td>{{ recipe.category }}</td>
                <td>{% if recipe.duration %}{{ recipe.duration|date('H:i') }}{% endif %}</td>
                <td>{{ recipe.rating }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('recipe_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
